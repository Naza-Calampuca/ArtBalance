<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublicacionAntesComprar"
    android:background="@drawable/gradient_background">

    <ImageButton
        android:id="@+id/BotonPerfil"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/perfil"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ArtBalance"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/BotonCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Cerrar SesiÃ³n"
        android:textSize="10dp"
        app:backgroundTint="#000000"
        android:layout_marginStart="240dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/VentanaSubirArchivos"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Subir Archivo"
        android:textColor="#000000"
        android:textSize="10dp"
        app:backgroundTint="#FFFFFF"
        android:layout_marginStart="240dp"
        android:layout_marginTop="45dp"/>

    <ImageView
        android:id="@+id/ImagenPubli"
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/TextInfo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo"
        android:textColor="@color/white"
        android:textColorHint="#838383"
        android:textSize="20dp"
        android:layout_below="@id/ImagenPubli"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/TextInfo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio"
        android:textColorHint="#838383"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_below="@+id/TextInfo1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/TextInfo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripcion"
        android:textColorHint="#838383"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_below="@+id/TextInfo2"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/TextInfo4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tags"
        android:textColorHint="#838383"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_below="@+id/TextInfo3"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"/>

    <Button
        android:id="@+id/Comprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar la publicacion"
        android:textColor="#000000"
        android:textSize="10dp"
        app:backgroundTint="#FFFFFF"
        android:layout_below="@+id/TextInfo4"
        android:layout_marginTop="50dp"
        android:layout_marginStart="90dp"/>

</RelativeLayout>